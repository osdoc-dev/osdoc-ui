{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "osdocui": ["./components/index.ts"],
      "osdocui/esm/*": ["./components/*"],
      "osdocui/lib/*": ["./components/*"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["components", "global.d.ts"],
  "exclude": ["node_modules", "lib", "esm"]
}
